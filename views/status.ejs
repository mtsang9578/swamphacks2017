<!-- After login. Status page -->

<html>

<head>
    <title>Depression</title>
    <link type="text/css" rel="stylesheet" href="resources/text.css">
    <link href="https://fonts.googleapis.com/css?family=Delius|Kalam|Pacifico|Short+Stack|Walter+Turncoat" rel="stylesheet">
</head>

<body>
    <div class="background">
        <!-- Header -->
        <div class="static">
            <ul>
                <li>
                    <a href="loginHome.html"><img src="resources/HomeIcon.png"></a>
                </li>
                <li><a href="status.html">Status</a></li>
                <li><a href="uploadPage.html">Update</a></li>
                <li><a href="resources.html">Resources</a></li>
                <li><a href="index2.html">Site Info</a></li>
                <li style="float:right" class="user">Welcome, User</li>
            </ul>
        </div>

        <!-- Content -->

        <div class="static2">
            <div class="moving">
                <h1>Status</h1>


                <% for (var i = screenshotCollections.length - 1; i>= 0; i--){%>
                    <section class="transbox">
                        <p class="info"><b><i><%= (new Date (screenshotCollections[i].conversationDate)).toDateString() %></i></b></p>
                        <div class="together">

                            <img class="pics status-image" src="<%=screenshotCollections[i].urls[0]%>">

                            <div class="info">
                                <%= screenshotCollections[i].diagnosis.state %>
                                    <br>
                                    <br>
                                    <form action="/loadAnalysis" method="post">
                                        <input type="number" value='<%=i%>' style="display:none;" name="index">
                                        <button type="submit">MORE DETAILS</button>
                                    </form>
                            </div>


                          <div class="details-block">
                            <div class="details-label">Details:</div>


                            <div class = "status-bar">
                              <div style="width:100%; text-align: left;"><b>Joy:</b></div>
                              <progress value=<%=screenshotCollections[i].averageAnalysis.joyAverage * 100%> max="100"></progress>
                            </div>


                            <div class = "status-bar">
                              <div style="width:100%; text-align: left;"><b>Sadness:</b></div>
                              <progress value=<%=screenshotCollections[i].averageAnalysis.sadnessAverage * 100%> max="100"></progress>
                            </div>


                            <div class = "status-bar">
                              <div style="width:100%; text-align: left;"><b>Fear:</b></div>
                              <progress value=<%=screenshotCollections[i].averageAnalysis.fearAverage * 100%> max="100"></progress>
                            </div>


                            <div class = "status-bar">
                              <div style="width:100%; text-align: left;"><b>Anger:</b></div>
                              <progress value=<%=screenshotCollections[i].averageAnalysis.angerAverage * 100%> max="100"></progress>
                            </div>


                            <div class = "status-bar">
                              <div style="width:100%; text-align: left;"><b>Disgust:</b></div>
                              <progress value=<%=screenshotCollections[i].averageAnalysis.disgustAverage * 100%> max="100"></progress>
                            </div>

                          </div>
                        </div>
                    </section>
                    <%}%>
            </div>
        </div>
    </div>
</body>

<!-- Footer -->